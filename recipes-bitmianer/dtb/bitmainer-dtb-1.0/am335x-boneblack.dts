		#size-cells = <1>;

		partition@0 {
			label = "spl";
			reg = <0x0 0x20000>;
		};

		partition@1 {
			label = "spl_backup1";
			reg = <0x20000 0x20000>;
		};

		partition@2 {
			label = "spl_backup2";
