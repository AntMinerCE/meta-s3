&cpu {
	/*
	 * To consider voltage drop between PMIC and SoC,
	 * tolerance value is reduced to 2% from 4% and
	 * voltage value is increased as a precaution.
	 */
	operating-points = <
		/* kHz    uV */
		1000000	1350000
		800000	1300000
		600000  1112000
		300000   969000
	>;
	/*
	elm: elm@48080000 {
                        compatible = "ti,am3352-elm";
                        reg = <0x48080000 0x2000>;
                        interrupts = <4>;
                        ti,hwmods = "elm";
						#status = "disabled";
                        status = "okay";
                };
	*/			
};
&ocp {
elm: elm@48080000 {
	compatible = "ti,am3352-elm";
	reg = <0x48080000 0x2000>;
	interrupts = <4>;
	ti,hwmods = "elm";
	//clocks = <&l4ls_gclk>;
	clock-names = "fck";
	status = "okay";
	};
};

&gpmc {
	status = "okay";
	pinctrl-names = "default";
