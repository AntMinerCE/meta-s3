	ranges = <0 0 0x08000000 0x10000000>;	/* CS0: NAND */	
	nand: nand@0,0 {	 
	    gpmc,device-nand;   
        reg = <0 0 0>; /* CS0, offset 0 */
        nand-bus-width = <8>;
        gpmc,device-width = <1>;
